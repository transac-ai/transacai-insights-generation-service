{
  "name": "transacai-insights-generation-service",
  "version": "1.0.0",
  "description": "Insights Generation Service (IGS) of the TransacAI project.",
  "main": "lib/index.js",
  "scripts": {
    "start": "node lib/index.js",
    "dev": "npm run build && npm run start",
    "build": "swc --strip-leading-paths --delete-dir-on-start -d lib src && sh copy_proto_files.sh",
    "lint": "pnpm eslint .",
    "format": "pnpm prettier . --write",
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --no-watchman",
    "buildandtest": "pnpm build && pnpm test",
    "predeploy": "pnpm lint && pnpm format && pnpm build && pnpm test"
  },
  "keywords": [
    "TransacAI",
    "transac ai",
    "transac-ai",
    "Insights Generation Service",
    "Generative AI",
    "Large Language Models",
    "LLM",
    "gRPC",
    "Apache Kafka"
  ],
  "author": "Oconva <oconva.org@gmail.com> (https://github.com/oconva)",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@swc/cli": "^0.5.2",
    "@types/cors": "^2.8.17",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.14",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1"
  },
  "dependencies": {
    "@bufbuild/buf": "^1.46.0",
    "@bufbuild/protobuf": "^1.10.0",
    "@bufbuild/protoc-gen-es": "^1.0.0",
    "@connectrpc/connect": "^1.0.0",
    "@connectrpc/connect-fastify": "^1.6.1",
    "@connectrpc/protoc-gen-connect-es": "^1.0.0",
    "@genkit-ai/dotprompt": "^0.9.6",
    "@genkit-ai/flow": "^0.5.17",
    "@grpc/grpc-js": "^1.12.4",
    "@grpc/proto-loader": "^0.7.13",
    "@grpc/reflection": "^1.0.4",
    "@oconva/qvikchat": "^2.0.4",
    "dotenv": "^16.4.5",
    "fastify": "^4.29.0",
    "install": "^0.13.0",
    "kafkajs": "^2.2.4",
    "winston": "^3.15.0",
    "zod": "^3.23.8"
  }
}
